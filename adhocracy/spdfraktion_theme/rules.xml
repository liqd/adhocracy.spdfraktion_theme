<rules
  xmlns="http://namespaces.plone.org/diazo"
  xmlns:css="http://namespaces.plone.org/diazo/css"
  xmlns:xi="http://www.w3.org/2001/XInclude"
  xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <theme href="theme.html" />

  <!--do not theme ajax requests-->
  <xi:include href="../../../adhocracy.wordpressbasic_theme/adhocracy/wordpressbasic_theme/rules_notheme.xml" />

  <rules css:if-content="#main">

    <!-- Head: meta -->
    <drop theme="/html/head/meta" if-content="/html/head/meta"/>
    <prepend theme="/html/head" content="/html/head/meta" />
    <!-- Head: title -->
    <xi:include href="../../../adhocracy.wordpressbasic_theme/adhocracy/wordpressbasic_theme/rules_header.xml" />
    <!-- Head: base tag -->
    <replace theme="/html/head/base" content="/html/head/base" />
    <!-- Head: styles and scripts-->
    <drop theme="/html/head/link[not(contains(@href, 'style_custom.css')) and contains(@rel, 'stylesheet')]" if-content="/html/head/link"/>
    <before theme="/html/head/link[1]" content="/html/head/link[contains(@rel, 'stylesheet')]" />
    <drop theme="/html/head/script" if-content="/html/head/script"/>
    <append theme="/html/head" content="/html/head/script" />
    <append theme="/html/head" content="/html/head/style" />
    <!--Conditional comments-->
    <append theme="/html/head">
      <xsl:for-each select="/html/head/comment()">
        <xsl:copy />
      </xsl:for-each>
    </append>

    <!--Fix wordpress links -->
    <xi:include href="../../../adhocracy.wordpressbasic_theme/adhocracy/wordpressbasic_theme/rules_fixlinks.xml" />

    <!--Body-->
    <copy css:theme="body" css:content="body" />

    <!--Logo-->
    <replace content="//*[@id='logo']/img/attribute::src" ><xsl:attribute name="src">/static_theme/static/images/logo_big_spd.png</xsl:attribute></replace>

    <!--Navigation-->

    <!--Navigation - about menu-->
    <replace css:content="#nav_about">
      <li>
       <div id="about_menu">
        <ul>
          <li>
            <a href="/_pages/about" class="" rel="" title="About" id="about_menu_link">Über diese Seite</a>
            <ul class="children">
              <li class="page_item page-item-619">
                <a href="/_pages/about/organisationen" title="Organisationen">Organisationen</a>
              </li>
              <li class="page_item page-item-622">
                <a href="/_pages/about/adhocracy" title="Adhocracy">Adhocracy</a>
              </li>
              <li class="page_item page-item-207">
                <a href="/_pages/about/imprint" title="Impressum">Impressum</a>
              </li>
              <li class="page_item page-item-208">
                <a href="/_pages/about/kontakt" title="Kontakt">Kontakt</a>
              </li>
            </ul>
          </li>
        </ul>
       </div>
       </li>
    </replace>
    <!--TODO: This is not DRY joka-->
    <rules if-path="/_pages/about">
     <replace css:content="#nav_about">
      <li>
       <div id="about_menu">
        <ul>
          <li class="current">
            <a href="/_pages/about" rel="" title="About" id="about_menu_link">Über diese Seite</a>
            <ul class="children">
              <li class="page_item page-item-619">
                <a href="/_pages/about/organisationen" title="Organisationen">Organisationen</a>
              </li>
              <li class="page_item page-item-622">
                <a href="/_pages/about/adhocracy" title="Adhocracy">Adhocracy</a>
              </li>
              <li class="page_item page-item-207">
                <a href="/_pages/about/imprint" title="Impressum">Impressum</a>
              </li>
              <li class="page_item page-item-208">
                <a href="/_pages/about/kontakt" title="Kontakt">Kontakt</a>
              </li>
            </ul>
          </li>
        </ul>
       </div>
      </li>
     </replace>
    </rules>

    <!--Navigation - hintergruende-->
    <replace css:content="#nav_dummy">
      <li>
        <a href="/_pages/hintergruende/" title="Hintergründe">Hintergründe</a>
      </li>
    </replace>
    <rules if-path="/_pages/hintergruende">
     <replace css:content="#nav_dummy">
        <li class="current">
         <a href="/_pages/hintergruende/" title="Hintergründe">Hintergründe</a>
       </li>
     </replace>
     <replace content="//*[@id='nav_help']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
     <replace content="//*[@id='nav_home']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
     <replace content="//*[@id='nav_instances']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
    </rules>

    <!--Navigation - mehr erfahren-->
    <rules if-path="/_pages/mehr-erfahren">
     <replace content="//*[@id='nav_help']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
     <replace content="//*[@id='nav_home']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
     <replace content="//*[@id='nav_instances']/attribute::class"><xsl:attribute name="class"></xsl:attribute></replace>
    </rules>


    <!--Content body and sidebar: startpage with merged wordpress-->
    <rules if-content="//*[@id='content-startpage']">
      <xi:include href="../../../adhocracy.wordpressbasic_theme/adhocracy/wordpressbasic_theme/rules_startpage.xml" />
      <!--Workaround to handle bad wordpress html-->
      <after css:theme-children="#mainbar-dummy" >
        <p><xsl:text disable-output-escaping="yes">&amp;nbsp;</xsl:text></p>
      </after>
    </rules>

    <!--Content body and sidebar: aboutpage with merged wordpress-->
    <rules if-path="/_pages/mehr-erfahren">
      <replace content="//*[@id='main']/attribute::class" ><xsl:attribute name="class">with_wordpress_tabs</xsl:attribute></replace>
      <drop css:content="#col1" attributes="id" />
      <drop css:content="#col3" />
    </rules>

    <!--Content body and sidebar: wordpress pages (/_pages)-->
    <xi:include href="../../../adhocracy.wordpressbasic_theme/adhocracy/wordpressbasic_theme/rules_pages.xml" />
    <xi:include href="rules_wordpress_javascript.xml" />

  </rules>
</rules>

